extends layout
block content
  link(rel="stylesheet", href="/css/index.css")
  script(src="/js/list.js")
  section.bbs.index
    table.bbs.list 
      thead
        tr
          th 작성일
          th 작성시각
          th 작성자ID
          th 제목
      tbody
        each bbs in bbsList
          tr(data-id=`${bbs._id}`)
            td= bbs.b_date
            td= bbs.b_time
            td= bbs.b_writer
            td= bbs.b_subject
          each cmm in bbs.b_comments
            tr 
              td  
              td
              td= cmm.ct_writer
              td ↳ #{cmm.ct_comment}
                
    div.bbs.button.box
      button.bbs.insert 추가