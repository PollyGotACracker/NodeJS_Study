block content
  link(rel="stylesheet", href="/css/index.css")
  script(src="/js/list.js")
  section.bbs.index
    form.bbs.search
      input(placeholder="게시글 검색").search
      button(type="button").search
        span(class="material-symbols-rounded") search
    table.bbs.list 
      thead
        tr
          th 작성일
          th 작성시각
          th 작성자
          th 제목
      tbody
        each bbs in bbsList
          tr(data-id=`${bbs._id}`)
            td= bbs.b_date
            td= bbs.b_time
            td= bbs.b_writer
            td= bbs.b_subject
