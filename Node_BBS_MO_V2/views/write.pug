extends layout 
block content
    link(rel="stylesheet", href="/css/write.css")
    script(src="/js/write.js")
    section.bbs.write
        form(method="POST").bbs.write
            fieldset 
                lengend
                div
                    label(for="b_date") 작성일자 
                    input(name="b_date", value= bbs.b_date, title="작성일자", type="date")#b_date
                div
                    label(for="b_time") 작성시각
                    input(name="b_time", value= bbs.b_time, title="작성시각", type="time")#b_time
                div
                    label(for="b_writer") 작성자
                    input(name="b_writer", value= bbs.b_writer, title="작성자ID")#b_writer
                div
                    label(for="b_subject") 제목
                    input(name="b_subject", value= bbs.b_subject, title="제목", autocomplete="off")#b_subject
                div
                    label(for="b_content") 내용
                    //- textArea 보이기: <textArea>데이터</textArea>
                    textarea(name="b_content", cols="30", rows="10", autocomplete="off")#b_content= bbs.b_content
                div.bbs.write.button.box 
                    span.bbs.msg
                    button(type="button").bbs.input 저장
                    button(type="button").bbs.list 리스트로